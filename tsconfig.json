{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@file-receiver/*": ["./src/file-receiver/*"],
      "@greyscale-converter/*": ["./src/greyscale-converter/*"],
      "@infra/*": ["./src/infra/*"],
      "@uploader/*": ["src/uploader"],
      "@test/*": ["./test/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
